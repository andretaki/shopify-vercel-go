{
  "version": 2,
  "functions": {
    "api/*.go": {
      "maxDuration": 60
    }
  },
  "routes": [
    {
      "src": "/api/database",
      "dest": "/api/database.go?handler=DatabaseHandler"
    },
    {
      "src": "/api/shopify-export",
      "dest": "/api/shopify-export.go"
    },
    {
      "src": "/api/notification-test",
      "dest": "/api/notification.go?handler=NotificationHandler"
    },
    {
      "src": "/api/(.*)",
      "dest": "/api/$1",
      "headers": {
        "Access-Control-Allow-Origin": "*",
        "Access-Control-Allow-Methods": "GET, POST, OPTIONS",
        "Access-Control-Allow-Headers": "Content-Type, Authorization"
      }
    }
  ],
  "crons": [
    {
      "path": "/api/shopify-export?type=all",
      "schedule": "0 */2 * * *"
    }
  ]
}